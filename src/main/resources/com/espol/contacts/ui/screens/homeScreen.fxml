<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espol.contacts.ui.controller.HomeController">
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <Label text="Libreta de Contactos" HBox.hgrow="NEVER">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
              <buttons>
                  <MenuButton fx:id="createButton" mnemonicParsing="false">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Persona">
                           <graphic>
                              <FontIcon iconLiteral="fas-user" />
                           </graphic></MenuItem>
                      <MenuItem mnemonicParsing="false" text="Empresa">
                           <graphic>
                              <FontIcon iconLiteral="fas-building" />
                           </graphic></MenuItem>
                    </items>
                     <graphic>
                        <FontIcon iconLiteral="fas-user-plus" iconSize="20" />
                     </graphic>
                  </MenuButton>
              </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets left="8.0" right="8.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox fx:id="leftPane" spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="4.0" VBox.vgrow="NEVER">
               <children>
                  <Label text="Ver: " />
                  <MenuButton fx:id="showButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Todos" HBox.hgrow="ALWAYS">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Todos">
                           <graphic>
                              <FontIcon iconLiteral="fas-users" />
                           </graphic>
                        </MenuItem>
                      <MenuItem mnemonicParsing="false" text="Favoritos">
                           <graphic>
                              <FontIcon iconLiteral="fas-star" />
                           </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Personas">
                           <graphic>
                              <FontIcon iconLiteral="fas-user" />
                           </graphic>
                        </MenuItem>
                      <MenuItem mnemonicParsing="false" text="Empresas">
                           <graphic>
                              <FontIcon iconLiteral="fas-building" />
                           </graphic>
                        </MenuItem>
                    </items>
                     <graphic>
                        <FontIcon iconLiteral="fas-users" />
                     </graphic>
                  </MenuButton>
               </children>
            </HBox>
            <ListView fx:id="contactsListView" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets left="4.0" />
         </padding>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="360.0" prefWidth="152.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <VBox fx:id="navigationRow" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <Separator maxWidth="1.7976931348623157E308" />
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#goPrevious" styleClass="text-icon-button">
                     <graphic>
                        <FontIcon iconLiteral="mdal-arrow_back_ios" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Contacto Anterior" />
                     </tooltip>
                  </Button>
                  <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                     <children>
                        <Text fx:id="countLabel" text="Mostrando C de T contactos." />
                     </children></HBox>
                  <Button mnemonicParsing="false" onAction="#goNext" styleClass="text-icon-button">
                     <graphic>
                        <FontIcon iconLiteral="mdal-arrow_forward_ios" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Contacto Siguiente" />
                     </tooltip>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
